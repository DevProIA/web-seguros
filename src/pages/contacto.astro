---
import MainLayout from '../layouts/MainLayout.astro';
import Card from '../components/atoms/Card.astro';
import Input from '../components/atoms/Input.astro';
import Button from '../components/atoms/Button.astro';
---

<MainLayout title="Contacto - SecureLife" description="Contáctanos para resolver tus dudas sobre seguros. Estamos aquí para ayudarte 24/7.">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-primary-600 to-secondary-700 text-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-5xl md:text-6xl font-bold mb-6">
          Contáctanos
        </h1>
        <p class="text-xl md:text-2xl text-primary-100 max-w-3xl mx-auto">
          Estamos aquí para resolver todas tus dudas y ayudarte a encontrar la protección perfecta
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-20 bg-gray-50 dark:bg-dark-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
        <!-- Contact Form -->
        <div>
          <Card shadow="lg">
            <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8">
              Envíanos un mensaje
            </h2>
            
            <form id="contact-form" class="space-y-6">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <Input
                  type="text"
                  name="nombre"
                  label="Nombre"
                  placeholder="Tu nombre"
                  required
                />
                
                <Input
                  type="text"
                  name="apellido"
                  label="Apellido"
                  placeholder="Tu apellido"
                  required
                />
              </div>
              
              <Input
                type="email"
                name="email"
                label="Correo electrónico"
                placeholder="tu@email.com"
                required
              />
              
              <Input
                type="tel"
                name="telefono"
                label="Teléfono"
                placeholder="+57 300 000 0000"
              />
              
              <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                  Asunto
                </label>
                <select 
                  name="asunto" 
                  required
                  class="block w-full rounded-xl border-gray-300 dark:border-dark-600 dark:bg-dark-700 dark:text-white shadow-sm focus:border-primary-500 focus:ring-primary-500 sm:text-sm"
                >
                  <option value="">Selecciona un asunto</option>
                  <option value="cotizacion">Solicitar cotización</option>
                  <option value="informacion">Información sobre seguros</option>
                  <option value="soporte">Soporte técnico</option>
                  <option value="reclamo">Reclamo</option>
                  <option value="otro">Otro</option>
                </select>
              </div>
              
              <Input
                type="textarea"
                name="mensaje"
                label="Mensaje"
                placeholder="Cuéntanos cómo podemos ayudarte..."
                rows={6}
                required
              />
              
              <Button type="submit" variant="primary" size="lg" class="w-full">
                Enviar Mensaje
              </Button>
            </form>
          </Card>
        </div>

        <!-- Contact Info -->
        <div class="space-y-8">
          <!-- Contact Methods -->
          <Card shadow="lg">
            <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
              Información de contacto
            </h3>
            
            <div class="space-y-6">
              <div class="flex items-start space-x-4">
                <div class="p-3 bg-primary-100 dark:bg-primary-900 rounded-xl">
                  <svg class="h-6 w-6 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900 dark:text-white">Teléfono</h4>
                  <p class="text-gray-600 dark:text-gray-300">+57 300 123 4567</p>
                  <p class="text-sm text-gray-500 dark:text-gray-400">Lunes a Viernes: 8:00 AM - 6:00 PM</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-4">
                <div class="p-3 bg-secondary-100 dark:bg-secondary-900 rounded-xl">
                  <svg class="h-6 w-6 text-secondary-600 dark:text-secondary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900 dark:text-white">Email</h4>
                  <p class="text-gray-600 dark:text-gray-300">info@securelife.com</p>
                  <p class="text-sm text-gray-500 dark:text-gray-400">Respuesta en 24 horas</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-4">
                <div class="p-3 bg-accent-100 dark:bg-accent-900 rounded-xl">
                  <svg class="h-6 w-6 text-accent-600 dark:text-accent-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900 dark:text-white">Oficina Principal</h4>
                  <p class="text-gray-600 dark:text-gray-300">Carrera 7 #32-16, Piso 12</p>
                  <p class="text-gray-600 dark:text-gray-300">Bogotá, Colombia</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-4">
                <div class="p-3 bg-success-100 dark:bg-success-900 rounded-xl">
                  <svg class="h-6 w-6 text-success-600 dark:text-success-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"/>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900 dark:text-white">WhatsApp</h4>
                  <p class="text-gray-600 dark:text-gray-300">+57 300 123 4567</p>
                  <p class="text-sm text-gray-500 dark:text-gray-400">Atención inmediata</p>
                </div>
              </div>
            </div>
          </Card>

          <!-- Office Hours -->
          <Card shadow="lg">
            <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
              Horarios de atención
            </h3>
            
            <div class="space-y-3">
              <div class="flex justify-between">
                <span class="text-gray-600 dark:text-gray-300">Lunes - Viernes</span>
                <span class="font-semibold text-gray-900 dark:text-white">8:00 AM - 6:00 PM</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600 dark:text-gray-300">Sábados</span>
                <span class="font-semibold text-gray-900 dark:text-white">9:00 AM - 2:00 PM</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600 dark:text-gray-300">Domingos</span>
                <span class="font-semibold text-gray-900 dark:text-white">Cerrado</span>
              </div>
              <div class="flex justify-between border-t border-gray-200 dark:border-dark-600 pt-3">
                <span class="text-gray-600 dark:text-gray-300">Emergencias</span>
                <span class="font-semibold text-success-600 dark:text-success-400">24/7</span>
              </div>
            </div>
          </Card>

          <!-- Quick Actions -->
          <Card shadow="lg">
            <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
              Acciones rápidas
            </h3>
            
            <div class="space-y-4">
              <Button variant="primary" size="md" href="/cotizar" class="w-full justify-start">
                <svg class="h-5 w-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                Solicitar Cotización
              </Button>
              
              <Button variant="secondary" size="md" href="/pqrs" class="w-full justify-start">
                <svg class="h-5 w-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"/>
                </svg>
                Enviar PQRS
              </Button>
              
              <Button variant="outline" size="md" href="https://wa.me/573001234567" class="w-full justify-start">
                <svg class="h-5 w-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"/>
                </svg>
                Chat por WhatsApp
              </Button>
            </div>
          </Card>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section -->
  <section class="py-20 bg-white dark:bg-dark-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold text-gray-900 dark:text-white mb-6">
          Visítanos
        </h2>
        <p class="text-xl text-gray-600 dark:text-gray-300">
          Estamos ubicados en el corazón de Bogotá
        </p>
      </div>
      
      <Card shadow="lg" padding="none">
        <div class="h-96 bg-gray-200 dark:bg-dark-700 rounded-2xl flex items-center justify-center">
          <div class="text-center">
            <svg class="h-16 w-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <p class="text-gray-500 dark:text-gray-400">Mapa interactivo próximamente</p>
            <p class="text-sm text-gray-400 dark:text-gray-500 mt-2">Carrera 7 #32-16, Piso 12, Bogotá</p>
          </div>
        </div>
      </Card>
    </div>
  </section>
</MainLayout>

<script>
  document.getElementById('contact-form')?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(e.target as HTMLFormElement);
    const contactData = Object.fromEntries(formData.entries());
    
    try {
      // TODO: Enviar mensaje a Supabase
      console.log('Enviando mensaje de contacto:', contactData);
      
      // Simulación de éxito
      alert('¡Mensaje enviado exitosamente! Te contactaremos pronto.');
      (e.target as HTMLFormElement).reset();
      
    } catch (error) {
      console.error('Error al enviar mensaje:', error);
      alert('Hubo un error al enviar tu mensaje. Inténtalo de nuevo.');
    }
  });
</script>