---
import MainLayout from '../layouts/MainLayout.astro';
import Card from '../components/atoms/Card.astro';
import Button from '../components/atoms/Button.astro';
import Badge from '../components/atoms/Badge.astro';
---

<MainLayout title="Dashboard - SecureLife">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Dashboard</h1>
      <p class="text-gray-600 mt-2">Bienvenido a tu panel de control</p>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
      <Card>
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="h-10 w-10 bg-blue-100 rounded-full flex items-center justify-center">
              <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <div class="text-sm font-medium text-gray-500">Pólizas</div>
            <div class="text-2xl font-bold text-gray-900">3</div>
          </div>
        </div>
      </Card>

      <Card>
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="h-10 w-10 bg-green-100 rounded-full flex items-center justify-center">
              <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <div class="text-sm font-medium text-gray-500">Cotizaciones</div>
            <div class="text-2xl font-bold text-gray-900">2</div>
          </div>
        </div>
      </Card>

      <Card>
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="h-10 w-10 bg-yellow-100 rounded-full flex items-center justify-center">
              <svg class="h-6 w-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"/>
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <div class="text-sm font-medium text-gray-500">PQRS</div>
            <div class="text-2xl font-bold text-gray-900">1</div>
          </div>
        </div>
      </Card>

      <Card>
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <div class="h-10 w-10 bg-red-100 rounded-full flex items-center justify-center">
              <svg class="h-6 w-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
              </svg>
            </div>
          </div>
          <div class="ml-4">
            <div class="text-sm font-medium text-gray-500">Pagos Pendientes</div>
            <div class="text-2xl font-bold text-gray-900">$125,000</div>
          </div>
        </div>
      </Card>
    </div>

    <!-- Recent Activity -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <Card>
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Pólizas Activas</h2>
        <div class="space-y-4">
          <div class="flex items-center justify-between border-b border-gray-200 pb-4">
            <div>
              <h3 class="text-sm font-medium text-gray-900">Seguro de Vida</h3>
              <p class="text-sm text-gray-500">Póliza #001</p>
            </div>
            <div class="flex items-center space-x-2">
              <Badge variant="success">Activa</Badge>
              <Button variant="outline" size="sm">Ver</Button>
            </div>
          </div>
          
          <div class="flex items-center justify-between border-b border-gray-200 pb-4">
            <div>
              <h3 class="text-sm font-medium text-gray-900">Seguro de Auto</h3>
              <p class="text-sm text-gray-500">Póliza #002</p>
            </div>
            <div class="flex items-center space-x-2">
              <Badge variant="success">Activa</Badge>
              <Button variant="outline" size="sm">Ver</Button>
            </div>
          </div>
          
          <div class="flex items-center justify-between">
            <div>
              <h3 class="text-sm font-medium text-gray-900">Seguro de Hogar</h3>
              <p class="text-sm text-gray-500">Póliza #003</p>
            </div>
            <div class="flex items-center space-x-2">
              <Badge variant="warning">Vence Pronto</Badge>
              <Button variant="outline" size="sm">Ver</Button>
            </div>
          </div>
        </div>
      </Card>

      <Card>
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Acciones Rápidas</h2>
        <div class="space-y-4">
          <Button class="w-full justify-start" onclick="window.location.href='/cotizar'">
            <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
            </svg>
            Nueva Cotización
          </Button>
          
          <Button class="w-full justify-start" onclick="window.location.href='/pqrs'">
            <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"/>
            </svg>
            Enviar PQRS
          </Button>
          
          <Button class="w-full justify-start" onclick="window.location.href='/pagos'">
            <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
            </svg>
            Realizar Pago
          </Button>
          
          <Button class="w-full justify-start" onclick="window.location.href='/polizas'">
            <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            Ver Todas las Pólizas
          </Button>
        </div>
      </Card>
    </div>
  </div>
</MainLayout>