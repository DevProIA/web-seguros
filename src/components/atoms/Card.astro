---
interface Props {
  class?: string;
  padding?: 'none' | 'sm' | 'md' | 'lg' | 'xl';
  shadow?: 'none' | 'sm' | 'md' | 'lg' | 'xl';
  hover?: boolean;
  gradient?: boolean;
}

const { 
  class: className = '',
  padding = 'md',
  shadow = 'md',
  hover = false,
  gradient = false
} = Astro.props;

const baseClasses = 'bg-white dark:bg-dark-800 rounded-2xl border border-gray-200 dark:border-dark-700 transition-all duration-200';

const paddingClasses = {
  none: '',
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8',
  xl: 'p-10'
};

const shadowClasses = {
  none: '',
  sm: 'shadow-soft',
  md: 'shadow-medium',
  lg: 'shadow-large',
  xl: 'shadow-2xl'
};

const hoverClasses = hover ? 'hover:shadow-large hover:-translate-y-1 cursor-pointer' : '';
const gradientClasses = gradient ? 'bg-gradient-to-br from-white to-gray-50 dark:from-dark-800 dark:to-dark-900' : '';

const classes = `${baseClasses} ${paddingClasses[padding]} ${shadowClasses[shadow]} ${hoverClasses} ${gradientClasses} ${className}`;
---

<div class={classes}>
  <slot />
</div>