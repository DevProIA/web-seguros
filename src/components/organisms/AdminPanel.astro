---
import Card from '../atoms/Card.astro';
import Button from '../atoms/Button.astro';
import Badge from '../atoms/Badge.astro';
---

<div class="space-y-6">
  <!-- Statistics Cards -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
    <Card>
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="h-8 w-8 bg-blue-500 rounded-full flex items-center justify-center">
            <svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
          </div>
        </div>
        <div class="ml-3">
          <div class="text-sm font-medium text-gray-500">Usuarios</div>
          <div class="text-2xl font-bold text-gray-900">1,234</div>
        </div>
      </div>
    </Card>
    
    <Card>
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="h-8 w-8 bg-green-500 rounded-full flex items-center justify-center">
            <svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
          </div>
        </div>
        <div class="ml-3">
          <div class="text-sm font-medium text-gray-500">Pólizas</div>
          <div class="text-2xl font-bold text-gray-900">856</div>
        </div>
      </div>
    </Card>
    
    <Card>
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="h-8 w-8 bg-yellow-500 rounded-full flex items-center justify-center">
            <svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
        <div class="ml-3">
          <div class="text-sm font-medium text-gray-500">Cotizaciones</div>
          <div class="text-2xl font-bold text-gray-900">342</div>
        </div>
      </div>
    </Card>
    
    <Card>
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="h-8 w-8 bg-red-500 rounded-full flex items-center justify-center">
            <svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"/>
            </svg>
          </div>
        </div>
        <div class="ml-3">
          <div class="text-sm font-medium text-gray-500">PQRS</div>
          <div class="text-2xl font-bold text-gray-900">67</div>
        </div>
      </div>
    </Card>
  </div>

  <!-- Recent Activity -->
  <Card>
    <h2 class="text-lg font-semibold text-gray-900 mb-4">Actividad Reciente</h2>
    
    <div class="space-y-4">
      <div class="flex items-center justify-between border-b border-gray-200 pb-4">
        <div>
          <h3 class="text-sm font-medium text-gray-900">Nueva cotización recibida</h3>
          <p class="text-sm text-gray-500">Juan Pérez - Seguro de Auto</p>
        </div>
        <div class="flex items-center space-x-2">
          <Badge variant="info">Pendiente</Badge>
          <Button variant="outline" size="sm">Ver</Button>
        </div>
      </div>
      
      <div class="flex items-center justify-between border-b border-gray-200 pb-4">
        <div>
          <h3 class="text-sm font-medium text-gray-900">PQRS requiere respuesta</h3>
          <p class="text-sm text-gray-500">María González - Reclamo #12345</p>
        </div>
        <div class="flex items-center space-x-2">
          <Badge variant="warning">Urgente</Badge>
          <Button variant="outline" size="sm">Responder</Button>
        </div>
      </div>
      
      <div class="flex items-center justify-between border-b border-gray-200 pb-4">
        <div>
          <h3 class="text-sm font-medium text-gray-900">Pago procesado</h3>
          <p class="text-sm text-gray-500">Carlos Rodríguez - Póliza #001</p>
        </div>
        <div class="flex items-center space-x-2">
          <Badge variant="success">Completado</Badge>
          <Button variant="outline" size="sm">Detalles</Button>
        </div>
      </div>
    </div>
  </Card>

  <!-- Quick Actions -->
  <Card>
    <h2 class="text-lg font-semibold text-gray-900 mb-4">Acciones Rápidas</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <Button class="h-20 flex-col">
        <svg class="h-6 w-6 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
        </svg>
        Nuevo Usuario
      </Button>
      
      <Button class="h-20 flex-col">
        <svg class="h-6 w-6 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        Nueva Póliza
      </Button>
      
      <Button class="h-20 flex-col">
        <svg class="h-6 w-6 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
        </svg>
        Reportes
      </Button>
    </div>
  </Card>
</div>